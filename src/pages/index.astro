---
import Layout from '../layouts/layout.astro'
---

<Layout title="NATS Trivia">
  <div class="absolute inset-0 flex items-center justify-center">
    <div class="tv-bounding-box relative flex flex-col items-center justify-center gap-9 p-9">
      <div class="flex-grow"></div>
      <div class="w-full flex gap-12">
        <img src="/people/jeremy.jpeg" class="rounded-full w-36 h-36 border-[4px] border-purple-500 self-end" alt="TV" />
        <div class="flex flex-col gap-2">
          <span class="flex flex-row gap-2">
            <span class="font-medium text-zinc-50">Jeremy Saenz</span>
            <span class="text-zinc-400">Director of Developer Experience</span>
          </span>
          <span class="chat-bubble">
            <span class="text-4xl font-semibold">What is my favorite food in the whole entire world?</span>
          </span>
        </div>
      </div>

      <div class="flex-grow"></div>
      <div class="grid grid-cols-2 gap-6 w-full">
        <button class="btn-choice selected">Pizza</button>
        <button class="btn-choice">Bagels</button>
        <button class="btn-choice">Oysters</button>
        <button class="btn-choice">Something Else</button>
      </div>

      <span class="absolute top-9 right-9 font-semibold text-4xl bg-zinc-800 border-[4px] border-purple-500 rounded-full p-4">60</span>
    </div>
  </div>
</Layout>
